<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.playerlagbe">

    <!-- Internet permission (still needed for future features) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.playerlagbe">

        <!-- Main Activity (Default Launcher) -->
        <activity 
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Activity -->
        <activity 
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Teams Activity -->
        <activity 
            android:name=".TeamsActivity"
            android:exported="false" />

        <!-- Shop Activity -->
        <activity 
            android:name=".ShopActivity"
            android:exported="false" />

        <!-- Manager Activity -->
        <activity 
            android:name=".ManagerActivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity 
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Cart Activity -->
        <activity 
            android:name=".CartActivity"
            android:exported="false" />

        <!-- Authentication Activities (kept for future use) -->
        <activity 
            android:name=".LauncherActivity"
            android:exported="false" />

        <activity 
            android:name=".AuthenticationActivity"
            android:exported="false" />

        <activity 
            android:name=".SignupActivity"
            android:exported="false" />

        <activity 
            android:name=".ForgotPasswordActivity"
            android:exported="false" />

    </application>

</manifest>

