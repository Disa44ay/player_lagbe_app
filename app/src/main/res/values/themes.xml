<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.playerlagbe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background colors -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/app_text_primary</item>
        <item name="android:textColorSecondary">@color/app_text_secondary</item>
        <item name="colorOnBackground">@color/app_text_primary</item>
        <item name="colorOnSurface">@color/app_text_primary</item>

        <!-- Primary colors (deep red) -->
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary colors (deep red) -->
        <item name="colorSecondary">@color/app_red</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Custom styles -->
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
    </style>

    <!-- Custom Button Style -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="android:background">@drawable/input_background_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Title Text Style -->
    <style name="AppTitleTextStyle">
        <item name="android:textColor">@color/app_red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Normal Text Style -->
    <style name="AppNormalTextStyle">
        <item name="android:textColor">@color/app_text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Hint Text Style -->
    <style name="AppHintTextStyle">
        <item name="android:textColor">@color/app_text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Card Style -->
    <style name="AppCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>
