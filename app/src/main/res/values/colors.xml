<resources>
    <!-- Clean Minimal Design Colors -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="light_grey">#F5F5F5</color>
    <color name="medium_grey">#E0E0E0</color>
    <color name="dark_grey">#BDBDBD</color>
    <color name="border_grey">#CCCCCC</color>
    
    <!-- Primary App Colors -->
    <color name="app_background">@color/white</color>
    <color name="app_text_primary">@color/black</color>
    <color name="app_text_secondary">#666666</color>
    <color name="app_text_hint">#999999</color>
    
    <!-- Button Colors -->
    <color name="button_background">@color/light_grey</color>
    <color name="button_pressed">@color/medium_grey</color>
    <color name="button_text">@color/black</color>
    
    <!-- Input Field Colors -->
    <color name="input_background">@color/white</color>
    <color name="input_border">@color/border_grey</color>
    <color name="input_text">@color/black</color>
    <color name="input_hint">@color/app_text_hint</color>
    
    <!-- Component Colors -->
    <color name="card_background">@color/white</color>
    <color name="divider_color">@color/medium_grey</color>
    <color name="icon_color">@color/black</color>
    
    <!-- Status Bar -->
    <color name="status_bar">@color/white</color>
    
    <!-- Legacy Material Colors (minimal usage) -->
    <color name="colorPrimary">@color/black</color>
    <color name="colorPrimaryVariant">@color/dark_grey</color>
    <color name="colorOnPrimary">@color/white</color>
    <color name="colorSecondary">@color/medium_grey</color>
    <color name="colorSecondaryVariant">@color/dark_grey</color>
    <color name="colorOnSecondary">@color/black</color>
    <color name="colorBackground">@color/app_background</color>
    <color name="colorSurface">@color/white</color>
    <color name="colorOnBackground">@color/app_text_primary</color>
    <color name="colorOnSurface">@color/app_text_primary</color>
</resources>
