<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/card_background"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- App Logo -->
        <TextView
            android:id="@+id/appLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player Lagbe"
            style="@style/AppTitleTextStyle"
            android:gravity="start|center_vertical" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <!-- Cart Icon -->
        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_cart"
            android:contentDescription="Cart"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <!-- Theme Toggle Icon -->
        <ImageView
            android:id="@+id/themeToggleIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_theme_toggle"
            android:contentDescription="Toggle Light/Dark Mode"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <!-- Main Content Container for Fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_background">

        <!-- Default Home Content (when no fragment is loaded) -->
        <ScrollView
            android:id="@+id/defaultHomeContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Latest Products Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest Products"
                    style="@style/AppTitleTextStyle"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewProducts"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!-- Recruit Player Form Section -->
                <include layout="@layout/recruit_player_form" />

                <!-- Ongoing Matches Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ongoing Matches"
                    style="@style/AppTitleTextStyle"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- See More Button -->
                <Button
                    android:id="@+id/btnSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="See More"
                    style="@style/AppButtonStyle"
                    android:layout_marginBottom="24dp" />

                <!-- Footer Section -->
                <include layout="@layout/footer_layout" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/card_background"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/icon_color"
        app:itemTextColor="@color/app_text_primary"
        app:itemRippleColor="@color/medium_grey"
        app:elevation="2dp" />

</LinearLayout>
